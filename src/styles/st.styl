@import '../../node_modules/nib/lib/nib'

// MIXINS

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

html, body
  font 12px Verdana
  height 100%
  background linear-gradient(top, white, rgba(0,0,0,0.5))
  & .chmo
    background yellowgreen
    & .inner-chmo
      width 50%
      border 1px solid grey
      background @background
      .inner-chmo2
        width:75%

box(x, y, margin)
  padding y x
  if margin
    margin y x

body
  box(5px, 10px, false)

.square
  width 100px
  height 100px

h1
  color green

h2
  font-size 2em

h3
  color red

p.test {
  display inline-block
  margin 2em
  padding @margin
  background lightblue
  border-radius(10px 15px 2px)
  a {
    color:blue
    background @color
  }
}
